type Todo {
  id: ID!
  text: String!
  done: Boolean!
  userId: Int!
}

type User {
  id: ID!
  name: String!
  email: String!
}

type AuthPayload {
  token: String!
  user: User!
}

input NewTodo {
  text: String!
  userId: String!
}

input NewUser {
  name: String!
  email: String!
  password: String!
}

input LoginUser {
  email: String!
  password: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
  login(input: LoginUser!): AuthPayload!
  registerUser(input: NewUser!): AuthPayload!
}

type Query {
  findAllUsers: [User!]!
  todos: [Todo!]!
}
